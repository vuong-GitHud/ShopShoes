@{
    ViewData["Title"] = "Home Page";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/css/StyleSheet.css" />

</head>
<body>
    <div class="wrapper">
        <i id="left" class="fa-solid fa-angle-left"></i>
        <ul class="carousel">
            <li class="card">
                <div class="img"><img src="images/picture1.png" alt="img" draggable="false"></div>
                <h2>Name Product</h2>
                <span>Sales Manager</span>
                <button class="add-product-button">Add Product</button>
            </li>
            <li class="card">
                <div class="img"><img src="images/picture2.png" alt="img" draggable="false"></div>
                <h2>Name Product 1</h2>
                <span>Web Developer</span>
                <button class="add-product-button">Add Product</button>

            </li>
            <li class="card">
                <div class="img"><img src="images/picture3.png" alt="img" draggable="false"></div>
                <h2>Name Product 2</h2>
                <span>Online Teacher</span>
                <button class="add-product-button">Add Product</button>

            </li>
            <li class="card">
                <div class="img"><img src="images/jacket1.png" alt="img" draggable="false"></div>
                <h2>Name Product 3</h2>
                <span>Freelancer</span>
                <button class="add-product-button">Add Product</button>

            </li>
            <li class="card">
                <div class="img"><img src="images/Jacket2.png" alt="img" draggable="false"></div>
                <h2>Name Product 4</h2>
                <span>Bank Manager</span>
                <button class="add-product-button">Add Product</button>

            </li>
            <li class="card">
                <div class="img"><img src="images/jacket3.png" alt="img" draggable="false"></div>
                <h2>Name Product 5</h2>
                <span>App Designer</span>
                <button class="add-product-button">Add Product</button>

            </li>
        </ul>
        <i id="right" class="fa-solid fa-angle-right"></i>

    </div>

    
    <main>
        <div class="contanier">
            <div class="content">
                <div class="div-text">
                    <span>Outfit of the day</span>
                    <h3>All your</h3>
                    <h1>Styles are here</h1>
                    <p>
                        Welcome to our store! We're thrilled to have you here <br>
                        Step inside and discover a world of endless possibilities <br>
                        Our shelves are filled with the latest trends, high-quality products, and exceptional deals <br>
                        Our friendly staff is here to assist you and make your shopping experience truly memorable. <br>
                        Enjoy your time exploring our store!
                    </p>
                    <a asp-controller="Product" asp-action="Index" class="btn">buy now</a>
                </div>
                <div class="div-img">
                    <img id="big-img" src="https://i.ibb.co/Yd2Z16g/International-Women-s-Day-Facebook-Post.png" alt="">
                </div>
                <div class="small-img">
                    <img onclick="myTshirt(this.src)" src="~/images/jacket1.png" alt="">
                    <img onclick="myTshirt(this.src)" src="~/images/jacket2.png" alt="">
                    <img onclick="myTshirt(this.src)" src="~/images/jacket3.png" alt="">
                    <img onclick="myTshirt(this.src)" src="https://i.ibb.co/Yd2Z16g/International-Women-s-Day-Facebook-Post.png" alt="">

                </div>
            </div>
        </div>
    </main>
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="footer-col">
                    <h4>company</h4>
                    <ul>
                        <li><a href="#">about us</a></li>
                        <li><a href="#">our services</a></li>
                        <li><a href="#">privacy policy</a></li>
                        <li><a href="#">affiliate program</a></li>
                    </ul>
                </div>
                <div class="footer-col">
                    <h4>get help</h4>
                    <ul>
                        <li><a href="#">FAQ</a></li>
                        <li><a href="#">shipping</a></li>
                        <li><a href="#">returns</a></li>
                        <li><a href="#">order status</a></li>
                        <li><a href="#">payment options</a></li>
                    </ul>
                </div>
                <div class="footer-col">
                    <h4>online shop</h4>
                    <ul>
                        <li><a href="#">watch</a></li>
                        <li><a href="#">bag</a></li>
                        <li><a href="#">shoes</a></li>
                        <li><a href="#">dress</a></li>
                    </ul>
                </div>
                <div class="footer-col">
                    <h4>follow us</h4>
                    <div class="social-links">
                        <a href="#"><i class="fab fa-facebook-f"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/js/script.js"></script>


</body>
</html>
