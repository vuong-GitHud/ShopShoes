@using ShopShoes
@model ShopShoes.Models.AddProductViewModel

<form method="post" action="Add">
    <div class="mb-3">
        <label for="" class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Price</label>
        <input type="number" class="form-control" asp-for="Price">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Amount</label>
        <input type="number" class="form-control" asp-for="Amount">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">DateCreate</label>
        <input type="date" class="form-control" asp-for="DateCreate">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Status</label>
        <input type="status" class="form-control" asp-for="Status">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
